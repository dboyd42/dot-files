    WIN_USERNAME=`cmd.exe /c "echo %USERNAME%" 2>/dev/null | cut -d$'\r' -f1`
else
    # Grab using PS
    #WIN_USERNAME=`powershell.exe '$env:UserName'`
    WIN_USERNAME="--WIN_USERNAME--"    # old
fi

